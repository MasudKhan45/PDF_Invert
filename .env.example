# Environment variables for PDF Inverter
# Copy this to .env and fill in your actual values

# Flask Secret Key (generate a random string)
FLASK_SECRET_KEY=change-this-to-random-secret-key

# Stripe API Keys (get from https://dashboard.stripe.com/apikeys)
# Use test keys for development, live keys for production
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_KEY_HERE
STRIPE_SECRET_KEY=sk_test_YOUR_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# Stripe Price IDs (get from Products page in Stripe Dashboard)
STRIPE_LIFETIME_PRICE_ID=price_XXXXXXXXXX
STRIPE_MONTHLY_PRICE_ID=price_XXXXXXXXXX
STRIPE_YEARLY_PRICE_ID=price_XXXXXXXXXX

# Google AdSense Publisher ID (get after AdSense approval)
ADSENSE_CLIENT_ID=ca-pub-XXXXXXXXXX
